{
  "extends": ["standard", "standard-react"],
  "rules": {
    "semi": [2, "always"],
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "eqeqeq": [2, "smart"],
    "jsx-quotes": [2, "prefer-double"],
    "react/prop-types": 0,
    "react/self-closing-comp": 0,
    "react/wrap-multilines": 0,
    "space-before-function-paren": 0
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "phantomjs": true,
    "jasmine": true
  }
}
